@model ExternalLoginConfirmationViewModel

<h1 class="text-info">Registrarse</h1>
<h3>Asocia tu @ViewData["ProviderDisplayName"] cuenta.</h3>

<form asp-controller="Account" asp-action="ExternalLoginConfirmation" method="post" role="form" asp-route-returnurl="@ViewData["ReturnUrl"]">
    <h4>Formulario asociacion</h4>
    <hr />
    <div asp-validation-summary="All" class="text-danger"></div>
    <p>
        Te has autenticado correctamente con<strong>@ViewData["ProviderDisplayName"]</strong>
        Ingrese un nombre de usuario para este sitio a continuación y haga clic en el botón Registrarse para finalizar
        Iniciando sesión.
    </p>
    <div class="form-group">
        <label asp-for="Email" class="col-md-2"></label>
        <div class="col-md-10">
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Name" class="col-md-2"></label>
        <div class="col-md-10">
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>
    
    <div class="form-group">
        <div class="col-md-2">
            <button type="submit" class="btn btn-success form-control">Registrarse</button>
        </div>
    </div>
</form>

@section Scripts{ 
@{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}