@model TwoFactorAuthenticationViewModel

<p>
    Ingrese el código a continuación en su aplicación de autenticación.
</p>
<p>
    @Model.Token
</p>
<p>
    Puede, escanear el código QR a continuación con su teléfono móvil.
</p>
<div id="qrCode"></div>

<form method="post">
    <input hidden asp-for="Token" />
    <div class="form-group">
        Ingresa el codigo : <input type="text" class="form-control" asp-for="Code" />

    </div>
    <button type="submit" class="btn btn-primary">Enviar</button>
</form>

@section Scripts{ 
<script src="~/js/qrcode.js"></script>
<script type="text/javascript">
    new QRCode(document.getElementById("qrCode"), "@Model.QRCodeUrl");
</script>
}